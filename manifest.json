{
  "manifest_version": 3,
  "name": "Vibrant Progress Tracker",
  "description": "Save and restore progress on web pages & YouTube videos, plus motivational nudges and quick summaries.",
  "version": "1.3.0",
  "permissions": [
    "storage",
    "notifications",
    "contextMenus",
    "tabs",
    "scripting",
    "alarms"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
 
  "action": {
    "default_popup": "popup.html",
    "default_title": "Vibrant Progress Tracker",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },


 

  "options_page": "options.html",




  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
